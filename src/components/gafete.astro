---
const { frontmatter, nombreconjunto } = Astro.props;
---

<div class="flex justify-center pt-10">
    <!-- Modal toggle -->
    <button
        data-modal-target="default-modal"
        data-modal-toggle="default-modal"
        class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
        type="button"
    >
        Gafete virtual
    </button>

    <!-- Main modal -->
    <div
        id="default-modal"
        tabindex="-1"
        aria-hidden="true"
        class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
    >
        <div class="relative p-4 w-full max-w-2xl max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow-sm">
                <!-- Modal header -->
                <div
                    class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-200"
                >
                    <h3 class="text-xl font-semibold text-gray-900">
                        Gafete virtual
                    </h3>
                    <button
                        type="button"
                        class="text-gray-400 bg-transparent hover:bg-white hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
                        data-modal-hide="default-modal"
                    >
                        <svg
                            class="w-3 h-3"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 14 14"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
                        </svg>
                        <span class="sr-only">Cerrar ventana</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div
                    class="flex justify-center items-center py-16 bg-gray-100 p-4"
                >
                    <div
                        id="credencial-contenedor"
                        class="w-60 h-96 [perspective:1000px] [transform-style:preserve-3d]"
                    >
                        <div
                            class="relative w-full h-full transition-transform duration-700 [transform-style:preserve-3d]"
                        >
                            <div
                                class="absolute inset-0 w-full h-full bg-white rounded-lg shadow-2xl [backface-visibility:hidden] overflow-hidden"
                            >
                                <div class="h-full">
                                    <div
                                        class="absolute flex justify-center w-full pt-6"
                                    >
                                        <div
                                            class="rounded-full bg-white w-10 h-4 inset-shadow-sm inset-shadow-gray-400"
                                        >
                                        </div>
                                    </div>
                                    <div>
                                        <div
                                            class="flex items-center justify-center"
                                        >
                                            <img
                                                src="/img/001.png"
                                                alt=""
                                                class="absolute w-2/3 pt-10"
                                            />
                                            <img
                                                src="/img/ponentes.webp"
                                                alt=""
                                                class="w-full h-64 object-cover"
                                            />
                                        </div>
                                        <div class="pl-6 pr-15 pt-7">
                                            <h1
                                                class="text-2xl font-bold text-gray-500 space-x-0 leading-none"
                                            >
                                                {nombreconjunto}
                                            </h1>
                                            <p style="color: #1e6dff;">
                                                {frontmatter.tags[0]}
                                            </p>
                                            <p
                                                class="rotate-90 absolute bottom-12 -right-2 -translate-y-1.5 translate-x-3.5 text-sm text-gray-300"
                                            >
                                                FES - <b style="color: #1e6dff;"
                                                    >ACATL√ÅN</b
                                                >
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div
                                class="absolute flex justify-center inset-0 w-full h-full rounded-lg shadow-2xl p-6 [backface-visibility:hidden] [transform:rotateY(180deg)]"
                                style="background-color: #1e6dff;"
                            >
                                <div
                                    class="absolute rounded-full bg-white w-10 h-4 inset-shadow-sm inset-shadow-gray-400"
                                >
                                </div>
                                <img
                                    src="/img/piedra.svg"
                                    alt="Logo congreso RHC"
                                    class="w-2/3"
                                />
                            </div>
                        </div>
                    </div>
                    <p
                        class="absolute bottom-0 right-0 px-4 py-2 text-blue-700"
                    >
                        ID: {frontmatter.ID}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
