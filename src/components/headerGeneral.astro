---
const { frontmatter, nombreconjunto } = Astro.props;
---

<div class="flex flex-col items-center">
    <div class="mt-20">
        <div
            class={frontmatter.tags[0] == "Ponente" ||
            frontmatter.tags[0] == "Moderador" ||
            frontmatter.tags[0] == "Conferencista magistral" ||
            frontmatter.tags[0] == "Mesa de diÃ¡logo" ||
            frontmatter.tags[0] == "Asistente"
                ? "relative inline-flex items-center justify-center w-28 h-28 overflow-hidden bg-blue-950 rounded-full shadow-lg"
                : frontmatter.tags[0] == "STAFF"
                  ? "relative inline-flex items-center justify-center w-28 h-28 overflow-hidden bg-red-950 rounded-full shadow-lg"
                  : "relative inline-flex items-center justify-center w-28 h-28 overflow-hidden bg-amber-950 rounded-full shadow-lg"}
        >
            <span class="text-4xl font-bold text-white"
                >{
                    frontmatter.nombre
                        .split(" ")
                        .slice(0, 2)
                        .map((word: string) => word.slice(0, 1).toUpperCase())
                }</span
            >
        </div>
    </div>

    <p class="text-slate-700 text-3xl font-bold mt-6 px-4 text-center">
        {nombreconjunto}
    </p>

    <div class="grid grid-flow-col-dense items-center gap-2 mt-6 mb-12">
        <span
            class="text-slate-500 border-1 border-slate-500 text-md font-medium px-2.5 py-0.5 rounded-lg"
        >
            {frontmatter.tags[0]}
        </span>
        {
            frontmatter.act2[0] ? (
                <span class="text-slate-500 border-1 border-slate-500 text-md font-medium px-2.5 py-0.5 rounded-lg">
                    {frontmatter.act2[0]}
                </span>
            ) : (
                ""
            )
        }
    </div>
</div>
