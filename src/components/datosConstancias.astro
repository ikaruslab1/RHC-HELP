---
import ConstanciasMensaje from "./mensajes/ConstanciasMensaje.astro";
import EstatusConstancias from "./Conctancias/EstatusConstancias.astro";

const { frontmatter } = Astro.props;
const { message = frontmatter.title } = Astro.props;
---
<div id="accordion-collapse" data-accordion="collapse">
            <h2 id="accordion-collapse-heading-1">
                <button
                    type="button"
                    class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-600 border bg-gray-50 border-gray-200 rounded-xl hover:bg-gray-200 transition-colors duration-400"
                    data-accordion-target="#accordion-collapse-body-1"
                    aria-expanded="false"
                    aria-controls="accordion-collapse-body-1"
                >
                    <div class="flex items-center gap-2">
                        <i class="fa-duotone fa-solid fa-certificate"></i><span
                            >Constancia</span
                        >
                    </div>
                    <svg
                        data-accordion-icon
                        class="w-3 h-3 rotate-180 shrink-0"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 10 6"
                    >
                        <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5 5 1 1 5"></path>
                    </svg>
                </button>
            </h2>
            <div
                id="accordion-collapse-body-1"
                class="hidden"
                aria-labelledby="accordion-collapse-heading-1"
            >
                <div>
                    <div class="p-5 border border-gray-200">
                        
                        <ConstanciasMensaje frontmatter={frontmatter} />

                        <form>
                            <div class="mb-6">

                               <!-- nombre -->

                               <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Nombre completo</label>
                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.nombre}
                                    id="target-input2"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />
                                <br />

                               <!-- CURP -->
                                
                                {frontmatter.datosextranjero[0] ? <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Nacionalidad</label>

                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.datosextranjero[0]}
                                    id="target-input"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : frontmatter.curp ? <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >CURP</label>

                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.curp}
                                    id="target-input"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >CURP</label>
                                <input
                                    disabled
                                    type="text"
                                    value="Favor de dar este dato vía correo electrónico a clrhc@acatlan.unam.mx antes del 16 de octubre para la emisión de su constancia a tiempo."
                                    class="bg-red-100 border border-gray-300 text-red-700 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> } 
                                <br />

                                <!-- Grado academico -->

                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Grado académico</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.grado === "Mtro." || frontmatter.grado === "Mtra." ? "Maestría" : frontmatter.grado === "Dr." || frontmatter.grado === "Dra." ? "Doctorado" :  frontmatter.grado === "Lic." || frontmatter.grado === "Ing." ? "Licenciatura" : frontmatter.grado == "SS." ? "Estudiante Universitario" : "Grado no registrado"}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <!-- Participaciones -->

                                <br>
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900">{frontmatter.tags[0] == "Ponente" ? "Ponencia" : frontmatter.tags[0] == "Conferencista magistral" ? "Conferencia magistral" : frontmatter.tags[0] == "Tallerista" ? "Taller" : frontmatter.tags[0] == "Ponente de la mesa de diálogo" ? "Mesa de diálogo" : "Tipo"}</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.tags[0] == "Asistente" ? frontmatter.tags[0] : frontmatter.grado == "SS." ? "Servicio social" : frontmatter.tags[1]}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"/>
                                {frontmatter.act2[0] ? <br>
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >{frontmatter.act2[0] == "Ponente" ? "Ponencia" : frontmatter.act2[0] == "Conferencista magistral" ? "Conferencia magistral" : frontmatter.act2[0] == "Tallerista" ? "Taller" : frontmatter.act2[0] == "Ponente de la mesa de diálogo" ? "Mesa de diálogo" : "Tipo"}</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.act2[0] == "Asistente a taller" ? frontmatter.act2[0] : frontmatter.act2[1]}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : ""}


                            </div>
                        </form>
                        <astro-greet data-clave={message}>
                            <div class="flex items-center justify-center">
                                <button
                                    class="px-6 py-2 text-white bg-gray-600 rounded-full hover:bg-gray-700"
                                >
                                    Mostrar datos
                                </button>
                            </div>
                        </astro-greet>

                      <EstatusConstancias frontmatter={frontmatter} />  

                    </div>
                </div>
            </div>
        </div>