---
const { frontmatter } = Astro.props;

const { message = frontmatter.title } = Astro.props;
---

<div id="accordion-collapse" data-accordion="collapse">
            <h2 id="accordion-collapse-heading-1">
                <button
                    type="button"
                    class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-600 border bg-gray-50 border-gray-200 rounded-xl hover:bg-gray-200 transition-colors duration-400"
                    data-accordion-target="#accordion-collapse-body-1"
                    aria-expanded="false"
                    aria-controls="accordion-collapse-body-1"
                >
                    <div class="flex items-center gap-2">
                        <i class="fa-duotone fa-solid fa-certificate"></i><span
                            >Constancia</span
                        >
                    </div>
                    <svg
                        data-accordion-icon
                        class="w-3 h-3 rotate-180 shrink-0"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 10 6"
                    >
                        <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5 5 1 1 5"></path>
                    </svg>
                </button>
            </h2>
            <div
                id="accordion-collapse-body-1"
                class="hidden"
                aria-labelledby="accordion-collapse-heading-1"
            >
                <div>
                    <div class="p-5 border border-gray-200">
                        <div
                            id="alert-1"
                            class="flex items-center p-4 mb-4 text-blue-700 rounded-lg bg-blue-50"
                            role="alert"
                        >
                            <svg
                                class="shrink-0 w-4 h-4"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"
                                ></path>
                            </svg>
                            <span class="sr-only">Info</span>
                            <div class="ms-3 text-sm font-medium">
                                Si los datos aquí proporcionados no corresponden
                                a los suyos, por favor
                                <a
                                    id="correo-link"
                                    href={"mailto:clrhc@acatlan.unam.mx?subject=Corrección,%20datos%20constancia:%20TICKET%20" +
                                        frontmatter.ID +
                                        "&body=Datos%20por%20cambiar:%0A%20%0A%0AEnviado%20desde%20la%20plataforma%20de%20ayuda."}
                                    data-clave={message}
                                    class="font-bold to-blue-900"
                                    ><u>Presione aquí para enviar un correo</u
                                    ></a
                                >.
                            </div>
                            <button
                                type="button"
                                class="ms-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex items-center justify-center h-8 w-8"
                                data-dismiss-target="#alert-1"
                                aria-label="Close"
                            >
                                <span class="sr-only">Close</span>
                                <svg
                                    class="w-3 h-3"
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 14 14"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                                    ></path>
                                </svg>
                            </button>
                        </div>

                        <form>
                            <div class="mb-6">

                               <!-- nombre -->

                               <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Nombre completo</label>
                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.nombre}
                                    id="target-input2"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />
                                <br />

                               <!-- CURP -->
                                
                                {frontmatter.datosextranjero[0] ? <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Nacionalidad</label>

                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.datosextranjero[0]}
                                    id="target-input"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : frontmatter.curp ? <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >CURP</label>

                                <input
                                    disabled
                                    type="password"
                                    value={frontmatter.curp}
                                    id="target-input"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >CURP</label>
                                <input
                                    disabled
                                    type="text"
                                    value="Dato faltante / sin confirmar"
                                    class="bg-red-100 border border-gray-300 text-red-700 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> } 
                                <br />

                                <!-- Grado academico -->

                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Grado académico</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.grado == "Mtro." || "Mtra." ? "Maestría" : frontmatter.grado == "Dr." || "Dra." ? "Doctorado" : "Grado no registrado"}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />

                                <!-- Participaciones -->

                                <br>
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900">{frontmatter.tags[0] == "Ponente" ? "Ponencia" : frontmatter.tags[0] == "Conferencista magistral" ? "Conferencia magistral" : "Tipo"}</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.tags[1]}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"/>
                                {frontmatter.act2[0] ? <br>
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >{frontmatter.act2[0] == "Ponente" ? "Ponencia" : frontmatter.act2[0] == "Conferencista magistral" ? "Conferencia magistral" :"Tipo"}</label>
                                
                                <input
                                    disabled
                                    type="text"
                                    value={frontmatter.act2[1]}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                /> : ""}


                            </div>
                        </form>
                        <astro-greet data-clave={message}>
                            <div class="flex items-center justify-center">
                                <button
                                    class="px-6 py-2 text-white bg-blue-600 rounded-full hover:bg-blue-700"
                                >
                                    Mostrar datos
                                </button>
                            </div>
                        </astro-greet>
                    </div>
                </div>
            </div>
        </div>