---
import BaseLayoutPonentes from "./BaseLayoutPonentes.astro";

const { frontmatter } = Astro.props;

const { message = frontmatter.title } = Astro.props;
---

<BaseLayoutPonentes pageTitle={frontmatter.nombre}>
    <div class="flex flex-col items-center">
        <div class="mt-12">
            <div
                class="relative inline-flex items-center justify-center w-28 h-28 overflow-hidden bg-blue-950 rounded-full shadow-lg"
            >
                <span class="text-4xl font-bold text-white"
                    >{frontmatter.avatar}</span
                >
            </div>
        </div>

        <p class="text-slate-700 text-3xl font-bold mt-6">
            {frontmatter.grado}
            {frontmatter.nombre}
        </p>

        <div class="grid grid-flow-col-dense items-center gap-2 mt-6 mb-12">
            {
                frontmatter.tags.map((tag: string) => (
                    <span class="text-slate-500 border-1 border-slate-500 text-xs font-medium px-2.5 py-0.5 rounded-lg">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>

    <div class="bg-white rounded-2xl px-4 py-12">
        <div id="accordion-collapse" data-accordion="collapse">
            <h2 id="accordion-collapse-heading-1">
                <button
                    type="button"
                    class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-600 border bg-gray-50 border-gray-200 rounded-xl hover:bg-gray-200 transition-colors duration-400"
                    data-accordion-target="#accordion-collapse-body-1"
                    aria-expanded="false"
                    aria-controls="accordion-collapse-body-1"
                >
                    <div class="flex items-center gap-2">
                        <i class="fa-duotone fa-solid fa-certificate"></i><span
                            >Constancia</span
                        >
                    </div>
                    <svg
                        data-accordion-icon
                        class="w-3 h-3 rotate-180 shrink-0"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 10 6"
                    >
                        <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5 5 1 1 5"></path>
                    </svg>
                </button>
            </h2>
            <div
                id="accordion-collapse-body-1"
                class="hidden"
                aria-labelledby="accordion-collapse-heading-1"
            >
                <div>
                    <div class="p-5 border border-b-0 border-gray-200">
                        <div
                            id="alert-1"
                            class="flex items-center p-4 mb-4 text-blue-700 rounded-lg bg-blue-50"
                            role="alert"
                        >
                            <svg
                                class="shrink-0 w-4 h-4"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"
                                ></path>
                            </svg>
                            <span class="sr-only">Info</span>
                            <div class="ms-3 text-sm font-medium">
                                Si los datos aquí proporcionados no corresponden
                                a los suyos, por favor <a
                                    href={"mailto:clrhc@acatlan.unam.mx?subject=Corrección %20:%20datos%20constancia:%20" +
                                        frontmatter.nombre +
                                        "&body=Datos%20por%20verificar%20de%20la%20constancia%3A%0A-%20Nombre:%20" +
                                        frontmatter.nombre +
                                        "%0A-%20Grado:%20" +
                                        frontmatter.grado +
                                        "%0A-%20CURP:%20" +
                                        frontmatter.curp +
                                        "%203%0A%0AEnviado%20desde%20la%20plataforma%20de%20ayuda."}
                                    class="font-bold to-blue-900"
                                    ><u>Presione aquí para enviar un correo</u
                                    ></a
                                >.
                            </div>
                            <button
                                type="button"
                                class="ms-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex items-center justify-center h-8 w-8"
                                data-dismiss-target="#alert-1"
                                aria-label="Close"
                            >
                                <span class="sr-only">Close</span>
                                <svg
                                    class="w-3 h-3"
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 14 14"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                                    ></path>
                                </svg>
                            </button>
                        </div>

                        <form>
                            <div class="mb-6">
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >Nombre completo</label
                                >
                                <input
                                    type="password"
                                    value={frontmatter.nombre}
                                    id="target-input2"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />
                                <br />
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >CURP</label
                                >

                                <input
                                    type="password"
                                    value={frontmatter.curp}
                                    id="target-input"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />
                                <br />
                                <label
                                    for="confirm_password"
                                    class="block mb-2 text-sm font-medium text-gray-900"
                                    >{frontmatter.tipo}</label
                                >
                                <input
                                    type="text"
                                    value={frontmatter.participacion}
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                />
                            </div>
                        </form>
                        <astro-greet data-clave={message}>
                            <div class="flex items-center justify-center">
                                <button
                                    class="px-6 py-2 text-white bg-blue-600 rounded-full hover:bg-blue-700"
                                >
                                    Mostrar datos
                                </button>
                            </div>
                        </astro-greet>
                    </div>
                </div>
            </div>
        </div>
        <br /><br />

        <!------------------------------------------------------------------ Modal ------------------------------------------------------------------>
        <div class="flex justify-center">
            <!-- Modal toggle -->
            <button
                data-modal-target="default-modal"
                data-modal-toggle="default-modal"
                class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                type="button"
            >
                Fagete virtual
            </button>

            <!-- Main modal -->
            <div
                id="default-modal"
                tabindex="-1"
                aria-hidden="true"
                class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
            >
                <div class="relative p-4 w-full max-w-2xl max-h-full">
                    <!-- Modal content -->
                    <div class="relative bg-white rounded-lg shadow-sm">
                        <!-- Modal header -->
                        <div
                            class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-200"
                        >
                            <h3 class="text-xl font-semibold text-gray-900">
                                Fagete virtual
                            </h3>
                            <button
                                type="button"
                                class="text-gray-400 bg-transparent hover:bg-white hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
                                data-modal-hide="default-modal"
                            >
                                <svg
                                    class="w-3 h-3"
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 14 14"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                                    ></path>
                                </svg>
                                <span class="sr-only">Close modal</span>
                            </button>
                        </div>
                        <!-- Modal body -->
                        <div
                            class="flex justify-center items-center min-h-screen bg-gray-100 p-4"
                        >
                            <div
                                id="credencial-contenedor"
                                class="w-96 h-60 [perspective:1000px] [transform-style:preserve-3d]"
                            >
                                <div
                                    class="relative w-full h-full transition-transform duration-700 [transform-style:preserve-3d]"
                                >
                                    <div
                                        class="absolute inset-0 w-full h-full bg-white rounded-lg shadow-xl p-6 [backface-visibility:hidden]"
                                    >
                                        <div
                                            class="flex flex-col justify-between h-full"
                                        >
                                            <div>
                                                <h1
                                                    class="text-2xl font-bold text-blue-800 mb-2"
                                                >
                                                    Nombre Empleado
                                                </h1>
                                                <p
                                                    class="text-sm text-gray-700"
                                                >
                                                    Diseñador UX/UI
                                                </p>
                                            </div>
                                            <div
                                                class="flex justify-between items-end"
                                            >
                                                <p
                                                    class="text-xs text-gray-500"
                                                >
                                                    ID: EM-001
                                                </p>
                                                <img
                                                    src="https://via.placeholder.com/60x60?text=Logo"
                                                    alt="Logo"
                                                    class="w-16 h-16 rounded-full border-2 border-blue-600"
                                                />
                                            </div>
                                        </div>
                                    </div>

                                    <div
                                        class="absolute inset-0 w-full h-full bg-gray-800 text-white rounded-lg shadow-xl p-6 [backface-visibility:hidden] [transform:rotateY(180deg)]"
                                    >
                                        <div
                                            class="flex flex-col justify-center items-center h-full text-center"
                                        >
                                            <img
                                                src="https://via.placeholder.com/120x120?text=QR"
                                                alt="Código QR"
                                                class="w-24 h-24 bg-white p-2 rounded-md mb-4"
                                            />
                                            <p class="text-xs mb-1">
                                                Escanea para más información
                                            </p>
                                            <p class="text-xs">
                                                Contacto: +1 (555) 123-4567
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        import "../scripts/gafete.js";
    </script>
</BaseLayoutPonentes>
